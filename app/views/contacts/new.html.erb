<% content_for :meta_title, "Homepage" %>
<% content_for :meta_description, "Description" %>
<%# content_for :meta_image, cloudinary_url(@offer.photo.path) %>

<div align="center">
   <h3>Nous envoyer un message</h3>
 
   <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
     <%= f.input :nom, :required => true %>
     <%= f.input :email, :required => true %>
     <%= f.input :message, :as => :text, :required => true %>
     <div class= "hidden">
       <%= f.input :nickname, :hint => 'Laisser ce champ blanc!' %>
     </div>
     <div>
       </br>
       <%= f.button :submit, 'Envoyer votre message', :class=> "btn btn-primary" %>
     </div>
   <% end %>
 </div>