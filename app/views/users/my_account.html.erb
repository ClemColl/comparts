<% content_for :meta_title, "Homepage" %>
<% content_for :meta_description, "Description" %>
<%# content_for :meta_image, cloudinary_url(@offer.photo.path) %>
<div class="formNew">
<h1>Modifier mon compte</h1>
<div id="separator"></div>

<%= simple_form_for(@user, html: { class: 'form-horizontal' }, method: :patch) do |f| %>

    <%= f.input :email %>
    <% unless current_user.role_id == "User" %>
        <%= f.input :nom %>
        <%= f.input :facebook %>
        <p>https://www.facebook.com/<strong>FacebookFrance</strong></p>
        <%= f.input :twitter %>
        <p>https://twitter.com/<strong>twitter</strong></p>
        <%= f.input :instagram %>
       <p>https://www.instagram.com/<strong>instagram</strong></p>
        <%= f.input :description %>
            <% if current_user.role_id == "Pro" %>
                <%= f.input :adresse %>
                <%= f.input :phone, label: 'Téléphone' %>
            <% end %>
    <% end %>

    <%= f.button :submit, 'Mettre à jour le profil'%>

<% end %>

<p><%= button_to "Supprimez mon compte", registration_path(@user), data: { confirm: "Etes vous sur?" }, method: :delete %></p>

<%= link_to "Revenir à l'accueil", root_url %>
</div>