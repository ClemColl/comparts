<div class="formNew">
<h2>Mot de passe oublié?</h2>
<div id="separator"></div>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, style: 'margin-right: 130px' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Réinitialiser le mot de passe" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>